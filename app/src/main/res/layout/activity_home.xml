<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Vertical stack: movies then offers -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <!-- 1) Now Showing (movies grid) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMovies"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp"/>

        <!-- 2) Featured Offers label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Featured Offers"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>

        <!-- 3) Offers slider: fixed height so itâ€™s always visible -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOffers"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"/>
    </LinearLayout>

    <!-- Floating action button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRecommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/btn_star_big_on"
        android:contentDescription="Recommend"/>
</FrameLayout>
